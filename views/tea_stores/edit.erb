<form class="pure-form pure-form-aligned" action = '/teaStores/<%=@teaStore.id%>' method = "POST">
	<input type="hidden" name="_method" value="PUT">
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Username</label>
            <input id="name" type="text" name="name" value = "<%= @teaStore.name %>">
        <div class="pure-control-group">
            <label for="address1">Address 1</label>
			<textarea name="address1"><%= @teaStore.address1 %></textarea>
        </div>

        <div class="pure-control-group">
            <label for="city">City</label>
            <input id="email" type="text" name="city" value="<%= @teaStore.city %>">
        </div>
         <div class="pure-control-group">
            <label for="postcode">Postcode</label>
            <input id="email" type="text" name="postcode" value = "<%= @teaStore.postcode %>">
        </div>
         <div class="pure-control-group">
            <label for="rating"> Rating </label>
            <input id="email" type="text" name="rating" value = "<%= @teaStore.rating %>">
    </fieldset>
    <input  class="pure-controls" type="submit" value="Submit">
</form>